    <!--main -->
      <section class ="main section" id = "main">
      <div class="content" >
        <img src="main.jpg" alt="" class="main_pic">
          <span class = "img_text"><font size="55"><strong>Student LEE's</strong></font> <br><font size = "40">Portfolio Page</font></span>         
      </div>
      </section>
      <!--education -->
      <section  class="education section" id = "education">
       <div class = "title">
        <span class = "first_head">E</span>
        <span class = "head">ducation</span>
      </div>
      <div class ="education_grid_left" >
        <div class = "education_info">
          <div class = "enter">
           <span class="bolder">2015.</span> 금당고등학교 입학
          </div>
          <div class = "graduate">
            <span class = "bolder">~ 2018.</span> 금당고등학교 졸업
          </div>
        </div>
        <div class = education_empty>
        </div>
      </div>
      <div class ="education_grid_right" >
        <div class = education_empty>
        </div>
        <div class = "education_info">
          <div class = "enter">
           <span class="bolder">2018.</span> 군산대 컴공과 학부 입학
          </div>
          <div class = "graduate">
            <span class = "bolder">~ 20XX.</span> 군산대 컴공과 학부 졸업
          </div>
        </div>
      </div>
      <div class ="education_grid_left" >
        <div class = "education_info">
          <div class = "enter">
           <span class="bolder">20XX.</span> A교육 이수
          </div>
          <div class = "graduate">
            <span class = "bolder">~ 20XX.</span> A교육 수료
          </div>
        </div>
        <div class = education_empty>
        </div>
      </div>
      </section>
      <!--project -->
      <section  class="section" id = "project">
        <div class = "title">
         <span class = "first_head">P</span>
         <span class = "head">roject</span>
       </div>
       <div class="project_container">
         <div class="project_title">
          포트폴리오 웹 사이트 제작
         </div>
          <div class="project_content">
           <img src="project1.png" class="project1_img">
           <div class="project1_EXP">
            <div class="project1_text">
              · CSS 연습<br>
              · 자바스크립트 활용 연습<br>
              · node.js Express를 활용한 서버 구축<br>
              · MySQL, node.js Express, Ejs 템플릿<br>&nbsp;&nbsp;을 이용하여 댓글 구현 연습
            </div>

            <div class = "project1_lang_img_container">
              <div>· 사용한 언어</div>
              <div></div>
              <div></div>
              <img src="html.png" class = "project_lang_img">
              <img src="css.png" class = "project_lang_img">
              <img src="javascript.png" class = "project_lang_img">
              <img src="nodejs.png" class = "project_lang_img">
              <img src="mysql.png" class = "project_lang_img">
            </div>
          </div>
       </div>
      </section>
      <!--more_infomation-->
      <section  class="section" id = "more_infomation">
        <div class = "title">
          <span class = "first_head">M</span>
          <span class = "head">ore infomation</span>
        </div>
       <div class="content_moreinfomation">
        <img src="youtube.png" class = "img_MI">
        <a href ="https://www.youtube.com/" class = "img_text_MI">Student LEE's<br><font size="6"><strong>Youtube Page</strong></font><br></a>
        <img src="github.png" class = "img_MI">
        <a href ="https://github.com/LeeFFL/WP1" class = "img_text_MI">Student LEE's<br><font size="6"><strong>Github Page</strong></font><br></a>
    </div>
       </section>
       <!--comment -->
      <section class="section" id = "comment">
        <div class = "title">
          <span class = "first_head">C</span>
          <span class = "head">omments</span>
        </div>
        <div class="card bg-light">
          <!-- comment form -->
          <form name = 'comment_input' method="post" action="/">
          <div class = "commentinfo">
            <div class="box">
           <div class="fw-bold">이름<input id = "name" name = "name" type = "text"></div>
           </div>
          <div class="box">
           <div class="fw-bold">비밀번호<input id="password" name = "password" type = "password"></div>
           </div>
          </div>
            <div class="card-body">
            <textarea class="form-control" rows="3" id = "text" name = "text" placeholder="댓글 내용을 입력해 주세요"></textarea>
                  <div align="right"><button id = "button" type = "submit" value="submit"> 입력</button></div>
          </form>

          <!-- comment form end -->
          <% comment.forEach(function(value){%>
            <div class="mb-4">
                <div class="ms-3">
                    <div class="fw-bold"><%= value.작성자 %><span class="timestamp"><%= value.시각 %></span></div>
                    <%= value.내용 %>
                    <form method="post" action="/act" id="inline_block">
                      <div class="inline_block">
                      <input type = "password" name = "password" id="del_password"placeholder="작성 시 비밀번호">
                      <input type = "hidden" name = "id" value = <%= value.id %>>
                      <button id="button_delete" type="submit">삭제</button>
                    </div>
                    </form>
                </div>
            </div>
            <% });%>
            </div>
    </section>
</div>
